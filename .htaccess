AddDefaultCharset utf-8

<IfModule mod_rewrite.c>
RewriteEngine on

# âœ… Allow direct access to cron.php
RewriteCond %{REQUEST_URI} ^/cron.php$ [NC]
RewriteRule ^ - [L]

# Existing rules
RewriteCond $1 !^(index\.php|resources|robots\.txt|cron\.php)
